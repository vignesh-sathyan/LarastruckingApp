@model LarastruckingApp.ViewModel.LoginViewModel
<!DOCTYPE html>
<html>
<body>
    <div class="modal" role="dialog" id="modalSession">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header prelative">

                    <div class="text-center"> <img src="~/Images/logo-350.png" /></div>
                    <div class="modal-title text-center fs-18">SESSION EXPIRED</div>
                    <button type="button" class="close setCorner" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="justify-content: center; align-items: center; display: flex;">
                    <p id="session_msg" style="margin-bottom: 0;"></p>
                </div>

                <div class="modal-footer row m-0">
                    <div class="col-md-12 text-center">
                        <button type="button" id="btnOk" class="btn btn-primary" data-dismiss="modal">Sign In </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" role="dialog" id="modalSession1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header prelative">

                    <div class="text-center"> <img src="~/Images/logo-350.png" /></div>
                    <div class="modal-title text-center fs-18">SESSION EXPIRED</div>
                    <button type="button" class="close setCorner" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="justify-content: center; align-items: center; display: flex;">
                    <p id="session_msg1" style="margin-bottom: 0;"></p>
                </div>
                <div class="modal-body" style="width:80%;margin:auto;">
                    <form id="loginForm" action="~/User/Login" method="post" class="form-signin">
                        <div class="form-group">
                            <input type="text" class="form-control noSpace" name="UserName" placeholder="Email" autocomplete="off" required="required">
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control noSpace" name="Password" autocomplete="off" placeholder="Password" required="required">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-lg btn-block login-btn">Log in</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
