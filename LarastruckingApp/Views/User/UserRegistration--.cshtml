@using LarastruckingApp.Entities.Permission
@using LarastruckingApp.Infrastructure
@model LarastruckingApp.ViewModel.UserViewModel
@{
    ViewBag.Title = "UserRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
    MemberProfile memberProfile = new MemberProfile();
    PermissionsDto permissions = IsPermited.HasPermission();
}


@using (Html.BeginForm("UserRegistration", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="card-body">
        <div class="white-bg customFormWrap">
            <h2 class="cardHeading"> EMPLOYEE REGISTRATION</h2>
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-12">
                    @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group required row">
                        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                        <div class="col-sm-8">
                            @Html.HiddenFor(model => model.Userid)
                            @Html.TextBoxFor(model => model.FirstName,
                                    new { @class = "form-control",
                                        @maxlength = "50",
                                        @onkeypress = "return onlyAlphabets(event)",
                                        @required = "required" })
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group required row">
                        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.LastName,
                                  new { @class = "form-control",
                                      @onkeypress = "return onlyAlphabets(event)",
                                      @maxlength = "50",
                                      @required = "required" } )
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group required row">
                        @Html.Label("UserName", htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.UserName,
                                  new { @class = "form-control noSpace",
                                      @required = "required",
                                      @onkeypress = "return onlyAlphanumeric(event)",
                                      @email = "email",
                                      @maxlength = "50" })
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group  row">
                        @Html.LabelFor(model => model.UserType, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                        <div class="col-sm-8">
                            <div class="dropdown">
                                <select class="form-control" id="UserType" name="UserType">
                                    <option value="Laras">LARA'S</option>
                                    <option value="Customer">CUSTOMER</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label ">Role</label>
                        <div class="col-sm-8">
                            <div class="dropdown">
                                <select id="ddlRole" name="RoleID" class="form-control"></select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group row checkbox-container">
                        @Html.Label("Active", htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                        <div class="col-sm-8">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.IsActive, true)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-12 text-right mb-2">
                    @if (permissions.IsInsert)
                    {
                        <button type="button" id="btnSave" class="btn green-Btn">Save</button>
                    }
                    else
                    {
                        <span class="text-danger">You don't have permission to add</span>
                    }
                    <button type="reset" class="btn outline-Btn">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-12 col-md-12 mt-2">
        <div class="white-bg customFormWrap">
            <div class="customTableWrapper table-spacing">
                <div id="divEquipmentList">
                    @{Html.RenderAction("GetUserList", "User");}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" role="dialog" id="modalTimeCard">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="modalTimeCard1">
            <div id="divmodalPopup" class="modal-header popup">
                <h6 class="modal-title"> TIMECARD CALCULATOR</h6>

            </div>
            <div class="modal-body">
                <div class="white-bg customFormWrap">
                    <div class="row">
                        <div class="col-md-12">
                            @{ Html.RenderPartial("_prTimeCard");}
                        </div>
                    </div>

                    <div class="hr-rate p-3">
                        @{ if (memberProfile.UserRole.Trim().ToLower() == "Management".ToLower())
                            {

                                <div class="row">
                                    <div class="col-md-3 mb-2">
                                        <span class="btn btn-secondary w-100">HOURLY RATE</span>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <div class="input-icon">
                                            <input type="text" id="txtHourlyRate" onfocusout="CalculateTotalPrice()" onkeypress="return onlyNumeric(event)" class="form-control" placeholder="0" />
                                            <span class="inpt-dollar">$</span>
                                        </div>
                                    </div>

                                    <div class="col-md-3 mb-2">
                                        <span class="btn btn-secondary w-100">LOAN</span>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <div class="input-icon">
                                            <input type="text" id="txtLoan" onfocusout="CalculateTotalPrice()" onkeypress="return onlyNumeric(event)" class="form-control" placeholder="0" />
                                            <span class="inpt-dollar">$</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 mb-2">
                                        <span class="btn btn-secondary w-100">TOTAL PAY</span>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <div class="input-icon">
                                            <input type="text" id="txtTotalPay" onfocusout="CalculateTotalPrice()" onkeypress="return onlyNumeric(event)" class="form-control" placeholder="0" />
                                            <span class="inpt-dollar">$</span>
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <span class="btn btn-secondary w-100">DEDUCTIONS </span>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <div class="input-icon">
                                            <input type="text" id="txtDeductions" onfocusout="CalculateTotalPrice()" onkeypress="return onlyNumeric(event)" class="form-control" placeholder="0" />
                                            <span class="inpt-dollar">$</span>
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <span class="btn btn-secondary w-100">Reimbursements </span>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <div class="input-icon">
                                            <input type="text" id="txtReimbursements" onfocusout="CalculateTotalPrice()" onkeypress="return onlyNumeric(event)" class="form-control" placeholder="0" />
                                            <span class="inpt-dollar">$</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 mb-2">
                                        @*<button id="btnCaculate" class="btn green-Btn w-100">Calculate</button>*@
                                        <button id="btnCaculate" onclick="btnCaculate()" class="btn green-Btn w-100">Save</button>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <button id="btnClear" onclick="btnClear()" class="btn green-Btn w-100">Clear All</button>
                                    </div>

                                    <div class="col-md-3 mb-2">
                                        <span class="btn btn-secondary w-100">REMAINING  </span>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <div class="input-icon">
                                            <input type="text" id="txtRemaining" readonly="readonly" class="form-control" placeholder="0" />
                                            <span class="inpt-dollar">$</span>
                                        </div>
                                    </div>

                                </div>
                            }
                        }
                        @{ if (memberProfile.UserRole.Trim().ToLower() == "Management".ToLower() || memberProfile.UserRole.Trim().ToLower() == "Dispatcher".ToLower())
                            {
                                <div class="row">
                                    <div class="col-md-3">
                                        <a href="#!" onclick="PrintDiv()" id="hrfPrint" class="btn green-Btn w-100">PRINT</a>
                                    </div>
                                    <div class="col-md-3">
                                        <a href="#!" id="hrfEmail" onclick="ShowEmailPopup()" class="btn green-Btn w-100">EMAIL</a>
                                    </div>
                                    @{ if (memberProfile.UserRole.Trim().ToLower() == "Management".ToLower())
                                        {
                                            <div class="col-md-6 mb-2">
                                                <div class="input-icon">
                                                    <input type="text" id="txtDescription" onfocusout="description()" onkeypress="return onlyAlphanumeric(event)" class="form-control" placeholder="Description" />
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            }
                        }
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-12 text-right mb-2">
                            <button type="reset" id="btnClose" onclick="closePopup()" class="btn outline-Btn" data-dismiss="modal">CLOSE</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@Html.Partial("_prTimeCardPrintNEmail");
@Scripts.Render("~/bundles/user")
