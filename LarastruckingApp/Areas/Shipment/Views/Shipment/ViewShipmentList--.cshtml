@using LarastruckingApp.Entities.Permission
@{
    ViewBag.Title = "Shipment Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    PermissionsDto permissions = IsPermited.HasPermission();
}

<div class="row">
    <div class="col-lg-12 col-md-12 mt-2">
        <div class="white-bg customFormWrap">

            <div class="col-md-12 divSearchBox">
                @*@Html.ActionLink("Create Shipment", "Index", "Shipment", null, new { @class = "btn green-Btn" })*@
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group row">
                            <label for="dtStartedDate" class="col-sm-4 col-form-label">Start Date</label>
                            <div class="col-sm-8">
                                <input type="text"
                                       required="required"
                                       placeholder="MM-DD-YYYY"
                                       name="dtStartedDate"
                                       onkeypress="return onlyAlphanumeric(event)"
                                       id="dtStartedDate"
                                       autocomplete="off"
                                       class="form-control jqueryui-marker-datepicker">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group  row">
                            <label for="dtEndDate" class="col-sm-4 col-form-label">End Date</label>
                            <div class="col-sm-8">
                                <input type="text"
                                       required="required"
                                       placeholder="MM-DD-YYYY"
                                       name="dtEndDate"
                                       onkeypress="return onlyAlphanumeric(event)"
                                       id="dtEndDate"
                                       autocomplete="off"
                                       class="form-control jqueryui-marker-datepicker">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group row">
                            <label for="ddlCustomer" class="col-sm-4 col-form-label">Customer</label>
                            <div class="col-sm-8">
                                <select id="ddlCustomer" class="form-control">
                                    <option>SEARCH CUSTOMER</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group row">
                            <label for="ddlFreightType" class="col-sm-4 col-form-label">Freight Type</label>
                            <div class="col-sm-8">
                                <select id="ddlFreightType" class="form-control">
                                    <option>SELECT FREIGHT TYPE</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <button type="button" id="btnViewShipment" class="btn green-Btn pullr">Search</button>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12 py-2 d-flex justify-content-start mb_40 pl-16">
                    @if (permissions.IsInsert)
                    {
                        @Html.ActionLink("Create Shipment", "Index", "Shipment", null, new { @class = "btn green-Btn" }) <label>&nbsp;</label>
                        @Html.ActionLink("Shipment Archive", "ViewAllShipment", "Shipment", null, new { @class = "btn green-Btn" })
                    }
                </div>
            </div>
            @*<hr class="hr_add" />*@
            <div class="customTableWrapper">

                <table class="table-bordered table-striped cf w-100 dataTable no-footer dtr-inline" id="tblShipmentDetails">
                    <thead>
                        <tr><td colspan="11"><b>REQUESTED SHIPMENTS</b></td></tr>
                        <tr>
                            <th hidden="hidden">ShipmentId</th>
                            <th>Customer Name</th>
                            <th>Pickup</th>
                            <th>Pickup Date</th>
                            <th>Delivery</th>
                            <th>Delivery Date</th>
                            <th>AWB / PO / ORD</th>
                            <th>Quantity</th>
                            <th>Created By</th>
                            <th>Ready</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>
    </div>
</div>

