<div class="modal" role="dialog" id="shipmentModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header popup">
                <h6 class="modal-title">Copy Shipment</h6>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <div class="white-bg customFormWrap">
                        <input type="hidden" id="ShipmentId" value="" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group required row">
                                    <label class="col-sm-4 col-form-label" for="ddlCustomerCopy">Customer</label>
                                    <div class="col-sm-8">
                                        <select id="ddlCustomerCopy"
                                                class="form-control">
                                            <option>SEARCH CUSTOMER</option>
                                        </select>

                                        <input type="hidden" id="hdnShipmentId" name="hdnShipmentId" value="0" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <label class="col-sm-4 col-form-label" for="txtAirWayBill">Air Waybill</label>
                                        <div class="col-sm-8">
                                            <input type="text"
                                                   name="txtAirWayBill"
                                                   onkeypress="return onlyAlphanumeric(event)"
                                                   id="txtAirWayBill"
                                                   class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="12">
                                    <div class="form-group row required">
                                        <label class="col-sm-4 col-form-label" for="ddlPickupDate">Est. Pickup Arrival</label>
                                        <div class="col-sm-8">
                                            <input type="text"
                                                   autocomplete="off"
                                                   data-required="required"
                                                   placeholder="MM-DD-YYYY"
                                                   onkeypress="return onlyNumericOrcolon(event)"
                                                   id="ddlPickupDate"
                                                   class="form-control dtTimer" />


                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-12">
                                    <div class="form-group row required">
                                        <label class="col-sm-4 col-form-label" for="ddlDeliveryDate">Est. Delivery Arrival</label>
                                        <div class="col-sm-8">

                                            <input type="text"
                                                   autocomplete="off"
                                                   data-required="required"
                                                   placeholder="MM-DD-YYYY"
                                                   onkeypress="return onlyNumericOrcolon(event)"
                                                   id="ddlDeliveryDate"
                                                   class="form-control dtTimer" />

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12 text-right">
                                <button type="button" id="btnCopy" class="btn green-Btn">Copy Shipment</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
@Scripts.Render("~/bundles/viewShipment")
